<UserControl x:Class="DraughtsGame.View.InfoMenuUserControl.InfoMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DraughtsGame.View.InfoMenuUserControl"
             mc:Ignorable="d" 
             Name="_this"
             >

    <Border BorderThickness="6"
            BorderBrush="#FFEAA01E"
            Height="auto" 
            Width="auto" 
            MinHeight="100" MinWidth="150"
            MaxHeight="125" MaxWidth="225"
            >
        <Grid>
            <TextBlock Height="auto" Width="auto"
                       Margin="10"
                       Text="{Binding InfoText}"
                       FontSize="20" FontWeight="Bold"  
                       Foreground="White" FontFamily="Comic Sans MS"
                       Name="infoMenuTxt"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       />
        </Grid>

        <Border.Background>
            <ImageBrush ImageSource="Image/menuBackground.jpg" />
        </Border.Background>
        
    </Border>
</UserControl>
